<?xml version="1.0" encoding="UTF-8"?>
<templates xmlns:cms="https://elbe5.de">
    <!-- master -->
    <template type="master" name="defaultMaster" displayName="Default Master Page">
        <!DOCTYPE html>
        <!DOCTYPE html>
        <html lang="<%=locale.getLanguage()%>">
            <head>
                <meta charset="utf-8"/>
                <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
                <title>%tpl-var-title%</title>
                <meta name="keywords" content="%tpl-var-keywords%" />
                <meta name="description" content="%tpl-var-description%" />
                <link rel="shortcut icon" href="/favicon.ico"/>
                <link rel="stylesheet" href="%tpl-var-stylesheet%"/>
                <script type="text/javascript" src="/static-content/js/jquery-1.12.4.min.js"></script>
                <script type="text/javascript" src="/static-content/js/bootstrap.bundle.min.js"></script>
                <script type="text/javascript" src="/static-content/js/bootstrap.tree.js"></script>
                <script type="text/javascript" src="/static-content/ckeditor/ckeditor.js"></script>
                <script type="text/javascript" src="/static-content/ckeditor/adapters/jquery.js"></script>
                <script type="text/javascript" src="/static-content/js/bandika.js"></script>
            </head>
            <tpl type="layout"/>
        </html>
    </template>
    <!-- layouts -->
    <template type="layout" name="paragraphLayout" displayName="Paragraph layout">
        <body>
            <div class="container">
                <header>
                    <section class="sysnav">
                        <tpl type="sysnavLinks" />
                    </section>
                    <div class="menu row">
                        <section class="col-12 menu">
                            <nav class="navbar navbar-expand-lg navbar-light">
                                <a class="navbar-brand" href="/"><img src="/files/logo.png" alt="%tpl-var-title%"/></a>
                                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                                    <span class="fa fa-bars"></span>
                                </button>
                                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                                    <ul class="navbar-nav mr-auto">
                                        <tpl type="menuLinks" />
                                    </ul>
                                </div>
                            </nav>
                        </section>
                    </div>
                    <div class="bc row">
                        <section class="col-12">
                            <ol class="breadcrumb">
                                <tpl type="breadcrumbLinks" />
                            </ol>
                        </section>
                    </div>
                </header>
                <main id="main" role="main">
                    <div id="pageContainer">
                        <tpl type="pageContent" />
                    </div>
                </main>
            </div>
            <div class="container fixed-bottom">
                <footer class="footer">
                    <ul class="nav">
                        <tpl type="footerLinks" />
                    </ul>
                </footer>
            </div>
        <div class="modal" id="modalDialog" tabindex="-1" role="dialog"></div>
        </body>
    </template>
    <template type="layout" name="emptyLayout" >
        <body>
        </body>
    </template>
    <!-- pages -->
    <template type="page" name="defaultSectionPage" >
        <tpl type="message" />
        <section class="contentSection" id="content">
            <tpl type="section" name="main" css="row"></tpl>
        </section>
    </template>
    <template type="page" name="contentAsideSectionPage" >
        <tpl type="message" />
        <section class="contentTop">
            <tpl type="section" name="top"></tpl>
        </section>
        <div class="row">
            <section class="col-lg-8 contentSection" id="content">
                <tpl type="section" name="main"></tpl>
            </section>
            <aside class="col-lg-4 asideSection" id="aside">
                <tpl type="section" name="aside"></tpl>
            </aside>
        </div>
    </template>
    <!-- content parts -->
    <template type="part" name="titlePart" css="col-lg-12">
        <h1 class="title">
            <tpl type="textfield" name="header">Lorem ipsum</tpl>
        </h1>
    </template>
    <template type="part" name="fullPart" css="col-lg-12">
        <div>
            <tpl type="htmlfield" name="html">Lorem ipsum</tpl>
        </div>
    </template>
    <template type="part" name="fullParagraphPart" css="col-lg-12">
        <div class="paragraph">
            <tpl type="htmlfield" name="html">Lorem ipsum</tpl>
        </div>
    </template>
    <template type="part" name="halfParagraphPart" css="col-lg-6">
        <div class="paragraph">
            <tpl type="htmlfield" name="html">Lorem ipsum</tpl>
        </div>
    </template>
</templates>

